{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "declaration":true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "lib": ["ESNext"],
        "sourceMap": false,
        "noEmitOnError": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@model":["model"]
        }
    },
    "include": [
        "src/*",
        "*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "examples",
        "dist"
    ]
}